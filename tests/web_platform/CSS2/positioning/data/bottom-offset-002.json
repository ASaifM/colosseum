{
    "assert": "The 'bottom' property, when using an absolute length value (not percentage) for relative positioning, specifies the offset of the box itself.",
    "test_case": {
        "style": {
            "margin_top": "8px",
            "height": "96px",
            "margin_bottom": "8px",
            "margin_right": "8px",
            "display": "block",
            "width": "624px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "display": "block",
                    "height": "96px",
                    "position": "relative",
                    "width": "96px"
                },
                "children": [
                    {
                        "style": {
                            "height": "48px",
                            "display": "block",
                            "bottom": "-48px",
                            "position": "relative",
                            "width": "48px"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-bottom",
        "http://www.w3.org/TR/CSS21/visuren.html#position-props"
    ],
    "matches": "bottom-offset-001-ref.xht"
}