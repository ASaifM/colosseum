{
    "assert": "The 'top' property sets a value of 'inherit', inheriting the value from the parent element.",
    "test_case": {
        "style": {
            "margin_top": "8px",
            "height": "96px",
            "margin_bottom": "8px",
            "margin_right": "8px",
            "display": "block",
            "width": "624px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "margin_top": "-96px",
                    "height": "96px",
                    "position": "relative",
                    "width": "624px",
                    "display": "block",
                    "top": "100%"
                },
                "children": [
                    {
                        "style": {
                            "height": "96px",
                            "margin_top": "96px",
                            "display": "block",
                            "position": "absolute",
                            "width": "624px"
                        },
                        "tag": "div"
                    },
                    {
                        "style": {
                            "border_bottom_width": "96px",
                            "height": "0px",
                            "position": "relative",
                            "width": "624px",
                            "border_bottom_style": "solid",
                            "display": "block",
                            "top": "100%"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-top",
        "http://www.w3.org/TR/CSS21/visuren.html#position-props"
    ],
    "matches": "top-113-ref.xht"
}