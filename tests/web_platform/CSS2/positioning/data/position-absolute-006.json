{
    "matches": "position-absolute-004-ref.xht",
    "assert": "An absolutely positioned box establishes a new containing block for absolutely positioned children.",
    "test_case": {
        "tag": "body",
        "children": [
            {
                "tag": "p",
                "style": {
                    "margin_top": "16px",
                    "margin_bottom": "16px",
