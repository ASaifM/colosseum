{
    "assert": "The position of a positioned element which inherits its 'top' value from its parent changes when the parent's 'top' value is changed even if the parent is display:table-row.",
    "test_case": {
        "style": {
            "margin_top": "8px",
            "height": "0px",
            "margin_bottom": "8px",
            "margin_right": "8px",
            "display": "block",
            "width": "624px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "display": "block",
                    "top": "32px",
                    "height": "100px",
                    "position": "absolute",
                    "width": "100px"
                },
                "children": [
                    {
                        "style": {
                            "display": "table-row",
                            "height": "100px",
                            "width": "100px"
                        },
                        "children": [
                            {
                                "style": {
                                    "display": "block",
                                    "top": "32px",
                                    "height": "100px",
                                    "position": "relative",
                                    "width": "100px"
                                },
                                "tag": "div"
                            }
                        ],
                        "tag": "div"
                    }
                ],
                "tag": "div"
            },
            {
                "style": {
                    "display": "block",
                    "top": "64px",
                    "height": "100px",
                    "position": "absolute",
                    "width": "100px"
                },
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "help": [
        "http://www.w3.org/TR/CSS21/cascade.html#value-def-inherit",
        "http://www.w3.org/TR/css-cascade-3/#inherit",
        "http://www.w3.org/TR/css-cascade-4/#inherit",
        "http://www.w3.org/TR/CSS21/visuren.html#position-props",
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-position"
    ],
    "matches": "dynamic-top-change-002-ref.xht"
}