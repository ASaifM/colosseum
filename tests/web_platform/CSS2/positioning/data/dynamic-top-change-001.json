{
    "assert": "The position of a positioned element which inherits its 'top' value from its relatively positioned grandparent changes when the grandparent's 'top' value is changed.",
    "matches": "dynamic-top-change-001-ref.xht",
    "help": [
        "http://www.w3.org/TR/CSS21/cascade.html#value-def-inherit",
        "http://www.w3.org/TR/css-cascade-3/#inherit",
        "http://www.w3.org/TR/css-cascade-4/#inherit",
        "http://www.w3.org/TR/CSS21/visuren.html#position-props",
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-position"
    ],
    "test_case": {
        "style": {
            "height": "20px",
            "display": "block",
            "margin_right": "8px",
            "margin_top": "8px",
            "margin_bottom": "8px",
            "width": "624px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "margin_bottom": "16px",
                    "width": "624px",
                    "height": "20px",
                    "display": "block",
                    "margin_top": "16px"
                },
                "children": [
                    {
                        "style": {},
                        "tag": "strong"
                    }
                ],
                "tag": "p"
            },
            {
                "style": {
                    "position": "relative",
                    "width": "624px",
                    "height": "0px",
                    "display": "block",
                    "top": "32px"
                },
                "children": [
                    {
                        "style": {
                            "position": "relative",
                            "width": "624px",
                            "height": "0px",
                            "display": "block",
                            "top": "32px"
                        },
                        "children": [
                            {
                                "style": {
                                    "position": "absolute",
                                    "width": "100px",
                                    "height": "100px",
                                    "display": "block",
                                    "top": "32px"
                                },
                                "tag": "div"
                            }
                        ],
                        "tag": "div"
                    },
                    {
                        "style": {
                            "position": "absolute",
                            "width": "100px",
                            "height": "100px",
                            "display": "block",
                            "top": "64px"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    }
}