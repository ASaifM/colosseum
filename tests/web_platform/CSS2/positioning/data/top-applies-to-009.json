{
    "matches": "top-applies-to-001-ref.xht",
    "test_case": {
        "children": [
            {
                "children": [
                    {
                        "style": {
                            "position": "absolute",
                            "height": "96px",
                            "top": "0px",
                            "display": "block",
                            "width": "96px"
                        },
                        "tag": "span"
                    }
                ],
                "style": {
                    "height": "0px",
                    "display": "block",
                    "width": "624px"
                },
                "tag": "div"
            }
        ],
        "style": {
            "margin_left": "8px",
            "height": "0px",
            "display": "block",
            "margin_top": "8px",
            "margin_right": "8px",
            "margin_bottom": "8px",
            "width": "624px"
        },
        "tag": "body"
    },
    "assert": "The 'top' property applies to elements with a display of block.",
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-top",
        "http://www.w3.org/TR/CSS21/visuren.html#dis-pos-flo",
