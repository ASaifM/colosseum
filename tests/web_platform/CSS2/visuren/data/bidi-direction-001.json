        "children": [
            {
                "tag": "p",
                "style": {
                    "height": "18px",
                    "margin_top": "16px",
                    "margin_bottom": "16px",
                    "width": "624px",
                    "display": "block"
                },
                "children": [
                    {
                        "text": "a b c!",
                        "style": {}
                    }
                ]
            },
            {
                "tag": "p",
                "style": {
                    "margin_top": "16px",
                    "height": "18px",
                    "margin_bottom": "16px",
                    "width": "624px",
                    "direction": "rtl",
                    "display": "block"
                },
                "children": [
                    {
                        "text": "!a b c",
                        "style": {}
                    }
                ]
            }
        ]
