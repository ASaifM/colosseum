{
    "matches": "../reference/ref-if-there-is-no-red.xht",
    "assert": "Descendant elements cannot override the parent's setting of the 'display' property when set to 'none'.",
    "test_case": {
        "style": {
            "width": "624px",
            "margin_bottom": "8px",
            "height": "0px",
            "margin_top": "8px",
            "margin_right": "8px",
            "margin_left": "8px",
            "display": "block"
        },
        "tag": "body",
        "children": [
            {
                "style": {
                    "display": "none"
                },
                "tag": "div",
                "children": [
                    {
                        "style": {
                            "width": "96px",
                            "height": "96px",
                            "display": "block"
                        },
                        "tag": "div"
                    }
                ]
            }
        ]
    },
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-display",
        "http://www.w3.org/TR/CSS21/visuren.html#display-prop"
    ]
}