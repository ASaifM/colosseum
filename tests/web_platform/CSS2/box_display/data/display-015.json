                "children": [
                    {
                        "style": {
                            "width": "62.65625px",
                            "height": "18px",
                            "display": "table-caption"
                        },
                        "tag": "span",
                        "children": [
                            {
                                "style": {},
                                "text": "Filler text"
                            }
                        ]
                    },
                    {
                        "style": {},
                        "tag": "span",
                        "children": [
                            {
                                "style": {},
                                "text": "Filler text"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "help": [
        "http://www.w3.org/TR/CSS21/visuren.html#propdef-display",
