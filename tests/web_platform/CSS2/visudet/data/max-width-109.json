        "tag": "body",
        "style": {
            "margin_bottom": "8px",
            "width": "624px",
            "margin_left": "8px",
            "margin_right": "8px",
            "margin_top": "8px",
            "height": "138px",
            "display": "block"
        },
        "children": [
            {
                "tag": "p",
                "style": {
                    "margin_bottom": "16px",
                    "width": "624px",
                    "margin_top": "16px",
                    "height": "18px",
                    "display": "block"
                }
            },
            {
                "tag": "div",
                "style": {
                    "width": "200px",
                    "height": "104px",
                    "display": "block"
                },
                "children": [
                    {
                        "tag": "img",
                        "style": {
                            "width": "100px",
                            "max_width": "100px",
                            "height": "100px"
                        }
                    }
                ]
            }
        ]
    },
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#min-max-widths"
