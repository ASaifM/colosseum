{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#block-root-margin"
    ],
    "test_case": {
        "style": {
            "width": "624px",
            "display": "block",
            "margin_top": "8px",
            "margin_bottom": "8px",
            "height": "96px",
            "margin_right": "8px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "width": "624px",
                    "display": "block",
                    "height": "96px",
                    "position": "relative"
                },
                "children": [
                    {
                        "style": {
                            "width": "96px",
                            "display": "block",
                            "height": "96px"
                        },
                        "children": [
                            {
                                "style": {
                                    "width": "96px",
                                    "display": "inline-block",
                                    "margin_top": "48px",
                                    "margin_bottom": "48px",
                                    "height": "0px"
                                },
                                "tag": "div"
                            }
                        ],
                        "tag": "div"
                    },
                    {
                        "style": {
                            "width": "96px",
                            "display": "block",
                            "top": "0px",
                            "height": "96px",
                            "left": "96px",
                            "position": "absolute"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "matches": "height-percentage-001-ref.xht",
    "assert": "Inline-block non-replaced elements use the margin box for sizing the height of the line box."
}