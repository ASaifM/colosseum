{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#propdef-height",
        "http://www.w3.org/TR/CSS21/visudet.html#the-height-property"
    ],
    "test_case": {
        "style": {
            "width": "624px",
            "display": "block",
            "margin_top": "8px",
            "margin_bottom": "8px",
            "height": "192px",
            "margin_right": "8px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "width": "624px",
                    "display": "block",
                    "height": "192px"
                },
                "children": [
                    {
                        "style": {
                            "width": "96px",
                            "display": "block",
                            "height": "96px"
                        },
                        "tag": "div"
                    },
                    {
                        "style": {
                            "width": "96px",
                            "display": "block",
                            "top": "-96px",
                            "height": "96px",
                            "left": "96px",
                            "position": "relative"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "matches": "height-percentage-001-ref.xht",
    "assert": "A percentage height is calculated using the height of the containing block."
}