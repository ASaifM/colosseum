{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#inline-replaced-height"
    ],
    "test_case": {
        "children": [
            {
                "children": [
                    {
                        "children": [
                            {
                                "tag": "svg:rect",
                                "style": {
                                    "height": "100px",
                                    "width": "200px"
                                }
                            }
                        ],
                        "tag": "svg:svg",
                        "style": {
                            "display": "block",
                            "height": "96px",
                            "position": "absolute",
                            "width": "300px"
                        }
                    },
                    {
                        "tag": "div",
                        "style": {
                            "display": "block",
                            "height": "96px",
                            "position": "absolute",
                            "width": "200px",
                            "top": "0px",
                            "left": "200px"
                        }
                    }
                ],
                "tag": "div",
                "style": {
                    "display": "block",
                    "height": "192px",
                    "position": "relative",
                    "width": "624px"
                }
            }
        ],
        "tag": "body",
        "style": {
            "margin_top": "8px",
            "display": "block",
            "width": "624px",
            "margin_right": "8px",
            "margin_bottom": "8px",
            "height": "192px",
            "margin_left": "8px"
        }
    },
    "assert": "An inline-block replaced element with a percentage height resolves based on the containing block when the replaced element is absolutely positioned.",
    "matches": "block-replaced-height-006-ref.xht"
}