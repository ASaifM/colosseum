{
    "help": [
        "http://www.w3.org/TR/CSS21/visudet.html#inline-replaced-height"
    ],
    "test_case": {
        "style": {
            "width": "624px",
            "display": "block",
            "margin_top": "8px",
            "margin_bottom": "8px",
            "height": "192px",
            "margin_right": "8px",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "width": "624px",
                    "display": "block",
                    "height": "192px",
                    "position": "relative"
                },
                "children": [
                    {
                        "style": {
                            "width": "300px",
                            "display": "block",
                            "height": "96px",
                            "position": "absolute"
                        },
                        "children": [
                            {
                                "style": {
                                    "width": "200px",
                                    "height": "100px"
                                },
                                "tag": "svg:rect"
                            }
                        ],
                        "tag": "svg:svg"
                    },
                    {
                        "style": {
                            "width": "200px",
                            "display": "block",
                            "top": "0px",
                            "height": "96px",
                            "left": "200px",
                            "position": "absolute"
                        },
                        "tag": "div"
                    }
                ],
                "tag": "div"
            }
        ],
        "tag": "body"
    },
    "matches": "block-replaced-height-006-ref.xht",
    "assert": "An inline-block replaced element with a percentage height resolves based on the containing block when the replaced element is absolutely positioned."
}