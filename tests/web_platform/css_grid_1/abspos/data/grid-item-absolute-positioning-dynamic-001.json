{
    "assert": "This test checks that a grid item which becomes an absolutelly positioned children of a grid.",
    "test_case": {
        "tag": "BODY",
        "children": [
            {
                "tag": "DIV",
                "children": [
                    {
                        "tag": "DIV",
                        "children": [
                            {
                                "tag": "DIV",
                                "style": {
                                    "position": "absolute",
                                    "min_height": "auto",
                                    "height": "100px",
                                    "display": "block",
                                    "min_width": "auto",
                                    "width": "100px"
                                }
                            }
                        ],
                        "style": {
                            "display": "grid",
                            "height": "100px",
                            "width": "200px"
                        }
                    }
                ],
                "style": {
                    "display": "block",
                    "position": "relative",
                    "width": "200px",
                    "height": "200px"
                }
            },
            {
                "tag": "SCRIPT",
                "children": [
                    {
                        "text": "window.requestAnimationFrame(() => {\n    document.getElementById(\"item\").style.position = \"absolute\";\n    document.body.offsetLeft;\n    document.documentElement.classList.remove('reftest-wait');\n  });",
                        "style": {}
                    }
                ],
                "style": {
                    "display": "none"
                }
            }
        ],
        "style": {
            "margin_left": "8px",
            "width": "624px",
            "margin_right": "8px",
            "height": "200px",
            "display": "block",
            "margin_bottom": "8px",
            "margin_top": "8px"
        }
    },
    "matches": "../../reference/ref-filled-green-200px-square.html",
    "help": [
        "https://drafts.csswg.org/css-grid-1/#abspos"
    ]
}