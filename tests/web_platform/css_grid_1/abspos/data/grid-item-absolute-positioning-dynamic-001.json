{
    "assert": "This test checks that a grid item which becomes an absolutelly positioned children of a grid.",
    "test_case": {
        "tag": "BODY",
        "style": {
            "margin_top": "8px",
            "display": "block",
            "margin_left": "8px",
            "margin_right": "8px",
            "margin_bottom": "8px",
            "height": "200px",
            "width": "624px"
        },
        "children": [
            {
                "tag": "DIV",
                "style": {
                    "display": "block",
                    "position": "relative",
                    "height": "200px",
                    "width": "200px"
                },
                "children": [
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "grid",
                            "height": "100px",
                            "width": "200px"
                        },
                        "children": [
                            {
                                "tag": "DIV",
                                "style": {
                                    "display": "block",
                                    "min_height": "auto",
                                    "height": "100px",
                                    "position": "absolute",
                                    "width": "100px",
                                    "min_width": "auto"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "tag": "SCRIPT",
                "style": {
                    "display": "none"
                },
                "children": [
                    {
                        "style": {},
                        "text": "window.requestAnimationFrame(() => {\n    document.getElementById(\"item\").style.position = \"absolute\";\n    document.body.offsetLeft;\n    document.documentElement.classList.remove('reftest-wait');\n  });"
                    }
                ]
            }
        ]
    },
    "matches": "../../reference/ref-filled-green-200px-square.html",
    "help": [
        "https://drafts.csswg.org/css-grid-1/#abspos"
    ]
}