                                    "display": "block",
                                    "min_width": "auto"
                                },
                                "tag": "DIV"
                            }
                        ],
                        "tag": "DIV"
                    }
                ],
                "tag": "DIV"
            },
            {
                "style": {
                    "width": "100px",
                    "margin_bottom": "25px",
                    "display": "block",
                    "position": "relative",
                    "height": "100px"
                },
                "children": [
                    {
                        "style": {
                            "width": "50px",
                            "position": "relative",
                            "display": "grid",
                            "height": "50px"
                        },
                        "children": [
                            {
                                "style": {
                                    "width": "37.5px",
                                    "position": "absolute",
                                    "height": "37.5px",
                                    "min_height": "auto",
                                    "display": "block",
                                    "min_width": "auto"
                                },
                                "tag": "DIV"
                            }
                        ],
                        "tag": "DIV"
                    }
                ],
                "tag": "DIV"
            },
            {
                "style": {
                    "display": "none"
                },
                "tag": "SCRIPT"
            }
        ],
        "tag": "BODY"
    }
