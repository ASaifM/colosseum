{
    "assert": "This test checks that positioned items can be dynamically changed.",
    "test_case": {
        "tag": "BODY",
        "style": {
            "margin_top": "8px",
            "display": "block",
            "margin_left": "8px",
            "margin_right": "8px",
            "margin_bottom": "8px",
            "height": "100px",
            "width": "624px"
        },
        "children": [
            {
                "tag": "DIV",
                "style": {
                    "display": "grid",
                    "position": "relative",
                    "height": "100px",
                    "width": "624px"
                },
                "children": [
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "block",
                            "height": "50px",
                            "width": "50px",
                            "min_height": "auto",
                            "min_width": "auto"
                        }
                    },
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "block",
                            "height": "50px",
                            "width": "50px",
                            "min_height": "auto",
                            "min_width": "auto"
                        }
                    },
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "block",
                            "height": "50px",
                            "width": "50px",
                            "min_height": "auto",
                            "min_width": "auto"
                        }
                    },
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "block",
                            "height": "50px",
                            "width": "50px",
                            "min_height": "auto",
                            "min_width": "auto"
                        }
                    },
                    {
                        "tag": "DIV",
                        "style": {
                            "display": "block",
                            "min_height": "auto",
                            "height": "50px",
                            "position": "absolute",
                            "width": "50px",
                            "min_width": "auto"
                        }
                    }
                ]
            },
            {
                "tag": "SCRIPT",
                "style": {
                    "display": "none"
                },
                "children": [
                    {
                        "style": {},
                        "text": "document.body.offsetLeft;\n\n  var item = document.getElementById(\"item\");\n  item.style.gridColumn = \"2 / 3\";\n  item.style.gridRow = \"2 / 3\";\n\n  document.documentElement.classList.remove('reftest-wait');"
                    }
                ]
            }
        ]
    },
    "matches": "../../reference/ref-filled-green-100px-square.xht",
    "help": [
        "https://drafts.csswg.org/css-grid-1/#abspos"
    ]
}