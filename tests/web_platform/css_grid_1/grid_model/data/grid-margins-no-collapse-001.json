{
    "help": [
        "http://www.w3.org/TR/css-grid-1/#grid-containers"
    ],
    "assert": "This test checks that grid's margin (body) do not collapse with the marings of the grid item (a paragraph).",
    "test_case": {
        "style": {
            "margin_top": "8px",
            "margin_bottom": "8px",
            "height": "50px",
            "width": "624px",
            "margin_right": "8px",
            "display": "grid",
            "margin_left": "8px"
        },
        "children": [
            {
                "style": {
                    "margin_top": "16px",
                    "border_bottom_color": "rgb(0, 128, 0)",
                    "border_top_color": "rgb(0, 128, 0)",
                    "margin_bottom": "16px",
                    "height": "18px",
                    "min_width": "auto",
                    "width": "624px",
                    "min_height": "auto",
                    "display": "block",
                    "border_left_color": "rgb(0, 128, 0)",
                    "border_right_color": "rgb(0, 128, 0)"
                },
                "children": [
                    {
                        "style": {},
                        "text": "This text should be"
                    },
                    {
                        "style": {
                            "border_bottom_color": "rgb(0, 128, 0)",
                            "border_top_color": "rgb(0, 128, 0)",
                            "border_left_color": "rgb(0, 128, 0)",
                            "border_right_color": "rgb(0, 128, 0)"
                        },
                        "children": [
                            {
                                "style": {},
                                "text": "green"
                            }
                        ],
                        "tag": "STRONG"
                    },
                    {
                        "style": {},
                        "text": "and body and paragraph margins should"
                    },
                    {
                        "style": {
                            "border_bottom_color": "rgb(0, 128, 0)",
                            "border_top_color": "rgb(0, 128, 0)",
                            "border_left_color": "rgb(0, 128, 0)",
                            "border_right_color": "rgb(0, 128, 0)"
                        },
                        "children": [
                            {
                                "style": {},
                                "text": "not collapse"
                            }
                        ],
                        "tag": "STRONG"
                    },
                    {
                        "style": {},
                        "text": "."
                    }
                ],
                "tag": "P"
            }
        ],
        "tag": "BODY"
    },
    "matches": "../reference/grid-text-green-margin-no-collapse-ref.html"
}